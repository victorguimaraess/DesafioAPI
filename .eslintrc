{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier", "const-case"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "class-methods-use-this": "off",
    "const-case/uppercase": "error",
    "no-magic-numbers": [
      "error",
      {
        "ignore": [0, 1]
      }
    ],
    "camelcase": "off",
    "no-console": "off",
    "import/no-cycle": "off"
  }
}
